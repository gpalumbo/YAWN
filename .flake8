[flake8]
# Flake8 configuration for Web Notes API
max-line-length = 125
extend-ignore =
    E203,
    W503,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    B008

exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    chrome-extension,
    .pytest_cache,
    .mypy_cache

per-file-ignores =
    # Test files can have longer lines and missing docstrings
    tests/*:D100,D101,D102,D103,E501
    # Init files can be empty
    __init__.py:D104,F401

# Specific error codes we care about
select =
    E,
    W,
    F,
    B

max-complexity = 10
doctests = True
