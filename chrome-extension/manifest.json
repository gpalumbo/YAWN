{
  "manifest_version": 3,
  "name": "Web Notes",
  "version": "1.0.0",
  "description": "Sticky notes for web pages",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Notes"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/marked.min.js",
        "libs/dompurify.min.js",
        "color-utils.js",
        "color-dropdown.js",
        "markdown-utils.js",
        "shared-utils.js",
        "server-api.js",
        "error-handling.js",
        "contentDialog.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
