{
  "manifest_version": 3,
  "name": "Web Notes - Hello World",
  "version": "1.0.0",
  "description": "A hello world Chrome extension for the Web Notes app",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Notes Hello World"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}