{
  "manifest_version": 3,
  "name": "Web Notes - Hello World",
  "version": "1.0.0",
  "description": "A hello world Chrome extension for the Web Notes app",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Notes Hello World"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
